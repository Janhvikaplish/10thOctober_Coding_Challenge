// Minimize the Heights II 

class Solution {
    int getMinDiff(int[] arr, int n, int k) {
        // code here
        Arrays.sort(arr);
        
        int ans=arr[n-1]-arr[0];
        
        int small=arr[0]+k;
        int big=arr[n-1]-k;
        int mi, ma;
        
        for(int i=0;i<n-1;i++){
        
            mi=Math.min(small,arr[i+1]-k);
            
            ma=Math.max(big,arr[i]+k);
            
            if(mi<0)
            continue;
            
            ans=Math.min(ans,ma-mi);
        }
        return ans;
    }
}
